<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:backgroundTint="#ECEFF1"
    android:layout_height="match_parent"
    tools:context=".ui.">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".ui.DetailsActivity">
  <TextView
      android:id="@+id/main"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:layout_marginTop="20dp"

      android:padding="5dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="#CBEDE1"/>
  <TextView
      android:id="@+id/bowling"
      android:text="Batting"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"


      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="30dp"
      app:layout_constraintStart_toStartOf="@id/main"
      android:layout_marginStart="16dp"
      />
  <TextView
      android:id="@+id/test"
      android:text="Statics"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:textColor="@color/black"
      android:layout_marginStart="70dp"
      android:layout_marginTop="30dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/bowling"

      />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:id="@+id/view"
      android:background="#DADEDF"
      app:layout_constraintTop_toBottomOf="@id/main"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/view"

      android:id="@+id/Matches"
      android:padding="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <TextView
      android:id="@+id/match"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Matches"
      android:gravity="center_vertical"
      android:layout_marginTop="7dp"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/Matches"
      app:layout_constraintStart_toStartOf="@id/main"
      android:layout_marginStart="15dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="57"
      android:gravity="center_vertical"
      android:layout_marginTop="7dp"
      android:id="@+id/batsman_matches"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/Matches"
      app:layout_constraintStart_toEndOf="@id/bowling"
      android:layout_marginStart="70dp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:id="@+id/view2"
      android:background="#DADEDF"
      app:layout_constraintTop_toBottomOf="@id/Matches"
      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/view2"
      android:id="@+id/back_text_view"
      android:padding="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Runs"
      android:gravity="center_vertical"
      android:layout_marginTop="7dp"
      android:id="@+id/batsman"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/back_text_view"
      app:layout_constraintStart_toStartOf="@id/main"
      android:layout_marginStart="15dp"
      />
  <TextView
      android:id="@+id/batsman_run"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="57"
      android:gravity="center_vertical"
      android:layout_marginTop="7dp"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/back_text_view"

      app:layout_constraintStart_toEndOf="@id/bowling"
      android:layout_marginStart="70dp"
      />


</androidx.constraintlayout.widget.ConstraintLayout>
 </androidx.core.widget.NestedScrollView>